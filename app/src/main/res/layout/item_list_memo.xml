        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/colorAccent"
