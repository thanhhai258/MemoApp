            android:textSize="30dp" />

        <TextView
            android:id="@+id/memo_tilte_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bui Hai"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>